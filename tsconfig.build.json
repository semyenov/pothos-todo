{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    // Relax some strict settings for build compatibility
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    // Exclude generated GraphQL files that cause DTS issues
    "src/graphql/__generated__/**/*",
    "src/**/*.generated.ts"
  ]
}
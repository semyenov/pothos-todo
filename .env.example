# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pothos_todo
POSTGRES_DB=pothos_todo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PORT=6379

# Session Configuration
SESSION_SECRET=your-session-secret-here

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# AI Configuration
AI_ENABLED=true
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# GraphQL Federation Configuration
FEDERATION_TYPE=hive

# Hive Gateway Configuration
HIVE_ENDPOINT=https://app.graphql-hive.com
HIVE_TOKEN=your-hive-token-here
HIVE_CDN_ENDPOINT=https://cdn.graphql-hive.com/artifacts/v1/YOUR_TARGET_ID
HIVE_CDN_KEY=your-cdn-key-here

# Subgraph Configuration
USER_SUBGRAPH_URL=http://localhost:4001/graphql
USER_SUBGRAPH_PORT=4001
TODO_SUBGRAPH_URL=http://localhost:4002/graphql
TODO_SUBGRAPH_PORT=4002
AI_SUBGRAPH_URL=http://localhost:4003/graphql
AI_SUBGRAPH_PORT=4003

# Gateway Configuration
GATEWAY_PORT=4000

# Docker Container Names (optional)
POSTGRES_CONTAINER=pothos-todo-postgres
REDIS_CONTAINER=pothos-todo-redis
QDRANT_CONTAINER=pothos-todo-qdrant
HIVE_GATEWAY_CONTAINER=pothos-todo-gateway
USER_SUBGRAPH_CONTAINER=pothos-todo-user-subgraph
TODO_SUBGRAPH_CONTAINER=pothos-todo-todo-subgraph
AI_SUBGRAPH_CONTAINER=pothos-todo-ai-subgraph

# Monitoring
TELEMETRY_ENABLED=true

# Development
DEBUG=
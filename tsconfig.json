{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Best practices & strict checks
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // "exactOptionalPropertyTypes": true, // Temporarily disabled for generated code compatibility
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // "noUnusedLocals": true, // Temporarily disabled for generated code
    // "noUnusedParameters": true, // Temporarily disabled for generated code
    "useDefineForClassFields": true,

    // Additional strictness (can be enabled selectively)
    "noPropertyAccessFromIndexSignature": false,

    // Type checking improvements
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    
    // Path mapping
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },

    // JSX (if needed in future)
    "jsx": "preserve",
    "jsxImportSource": "react",

    // Emit settings
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/graphql/**",
    "src/api/schema/types/VersionedTodo.ts",
    "src/lib/versioning/**"
  ]
}

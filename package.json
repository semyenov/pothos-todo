{
  "name": "pothos-federation",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "pothos-cli": "./bin/run.js"
  },
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "start:dist": "node dist/index.js",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "build:prod": "NODE_ENV=production tsdown",
    "build:clean": "rm -rf dist && tsdown",
    "check:types": "bunx tsc --noEmit",
    "check:publint": "publint",
    "check:attw": "bunx @arethetypeswrong/cli --pack",
    "validate": "bun run check:types && bun run check:publint",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down && docker-compose up -d postgres",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:reset": "bunx prisma migrate reset",
    "db:generate": "bunx prisma generate",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "qdrant:up": "docker-compose up -d qdrant",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@oclif/core": "^4.5.1",
    "@oclif/plugin-help": "^6.2.31",
    "@oclif/plugin-plugins": "^5.4.45",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/jsonwebtoken": "^9.0.10",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "figlet": "^1.8.2",
    "inquirer": "^12.7.0",
    "listr2": "^9.0.1",
    "ora": "^8.2.0",
    "publint": "^0.3.12"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@apollo/gateway": "^2.11.2",
    "@apollo/server": "^5.0.0",
    "@apollo/subgraph": "^2.11.2",
    "@graphql-yoga/subscription": "^5.0.5",
    "@langchain/community": "^0.3.49",
    "@langchain/core": "^0.3.66",
    "@langchain/openai": "^0.6.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-graphql": "^0.51.0",
    "@opentelemetry/instrumentation-http": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@pothos/core": "^4.7.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-directives": "^4.2.4",
    "@pothos/plugin-errors": "^4.4.2",
    "@pothos/plugin-federation": "^4.4.2",
    "@pothos/plugin-prisma": "^4.10.0",
    "@pothos/plugin-prisma-utils": "^1.3.2",
    "@pothos/plugin-relay": "^4.6.1",
    "@pothos/plugin-scope-auth": "^4.1.5",
    "@pothos/plugin-simple-objects": "^4.1.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "@pothos/plugin-validation": "^3.10.2",
    "@pothos/plugin-with-input": "^4.1.2",
    "@prisma/client": "^6.12.0",
    "@qdrant/js-client-rest": "^1.15.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/ioredis": "^5.0.0",
    "@types/ws": "^8.18.1",
    "arctic": "^2.0.0",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "c12": "^3.1.0",
    "consola": "^3.4.2",
    "cookie-es": "^2.0.0",
    "cors": "^2.8.5",
    "crossws": "^0.3.1",
    "defu": "^6.1.4",
    "destr": "^2.0.5",
    "dotenv": "^17.2.0",
    "execa": "^9.6.0",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "graphql": "^16.11.0",
    "graphql-http": "^1.22.4",
    "graphql-scalars": "^1.24.2",
    "graphql-ws": "^6.0.6",
    "graphql-yoga": "^5.15.1",
    "h3": "^1.15.3",
    "ioredis": "^5.6.1",
    "lucia": "^3.2.1",
    "nanoid": "^5.1.5",
    "ofetch": "^1.4.1",
    "ohash": "^2.0.11",
    "openai": "^5.10.2",
    "pathe": "^2.0.3",
    "prisma": "^6.12.0",
    "prisma-generator-pothos-codegen": "^0.7.1",
    "std-env": "^3.9.0",
    "tsdown": "^0.12.9",
    "ufo": "^1.6.1",
    "unstorage": "^1.16.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^4.0.5"
  },
  "oclif": {
    "bin": "pothos-cli",
    "dirname": "pothos-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": ":",
    "topics": {
      "build": {
        "description": "Build project commands"
      },
      "check": {
        "description": "Validation and check commands"
      },
      "config": {
        "description": "Configuration management commands"
      },
      "db": {
        "description": "Database management commands"
      },
      "dev": {
        "description": "Development commands"
      },
      "services": {
        "description": "Docker services management"
      }
    }
  }
}

{
  "name": "pothos-federation",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "bin": {
    "pothos-cli": "./bin/run.js"
  },
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "start:dist": "node dist/index.js",
    "build": "bun run db:generate && BUILD_DTS=false tsdown",
    "build:with-types": "bun run db:generate && BUILD_DTS=true tsdown",
    "build:watch": "tsdown --watch",
    "build:prod": "NODE_ENV=production BUILD_DTS=false tsdown",
    "build:clean": "rm -rf dist && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run tests/e2e",
    "check:types": "bunx tsc --noEmit",
    "check:publint": "publint",
    "check:attw": "bunx @arethetypeswrong/cli --pack",
    "validate": "bun run check:types && bun run check:publint && bun run test",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down && docker-compose up -d postgres",
    "redis:up": "docker-compose up -d redis",
    "redis:down": "docker-compose stop redis",
    "cache:up": "docker-compose up -d redis",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:reset": "bunx prisma migrate reset",
    "db:generate": "bunx prisma generate",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "qdrant:up": "docker-compose up -d qdrant",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@biomejs/biome": "^2.1.2",
    "@faker-js/faker": "^8.4.1",
    "@oclif/core": "^4.5.1",
    "@oclif/plugin-help": "^6.2.31",
    "@oclif/plugin-plugins": "^5.4.45",
    "@testing-library/dom": "^10.4.0",
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "@types/inquirer": "^9.0.8",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "figlet": "^1.8.2",
    "husky": "^9.1.6",
    "inquirer": "^12.7.0",
    "knip": "^5.36.0",
    "lint-staged": "^15.2.10",
    "listr2": "^9.0.1",
    "ora": "^8.2.0",
    "publint": "^0.3.12",
    "supertest": "^7.0.0",
    "testcontainers": "^10.9.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.11.2",
    "@graphql-yoga/plugin-graphql-sse": "^3.8.0",
    "@node-rs/argon2": "^1.8.3",
    "@node-rs/bcrypt": "^1.10.4",
    "@pothos/core": "^4.7.2",
    "@pothos/plugin-dataloader": "^4.4.2",
    "@pothos/plugin-directives": "^4.2.4",
    "@pothos/plugin-errors": "^4.4.2",
    "@pothos/plugin-federation": "^4.4.2",
    "@pothos/plugin-prisma": "^4.10.0",
    "@pothos/plugin-relay": "^4.6.1",
    "@pothos/plugin-scope-auth": "^4.1.5",
    "@pothos/plugin-simple-objects": "^4.1.3",
    "@pothos/plugin-tracing": "^1.1.2",
    "@pothos/plugin-validation": "^3.10.2",
    "@pothos/plugin-with-input": "^4.1.2",
    "@prisma/client": "^6.12.0",
    "@types/ioredis": "^5.0.0",
    "@types/validator": "^13.15.2",
    "arctic": "^2.0.0",
    "c12": "^3.1.0",
    "dataloader": "^2.2.3",
    "execa": "^9.6.0",
    "graphql": "^16.11.0",
    "graphql-sse": "^2.5.3",
    "graphql-ws": "^5.16.0",
    "graphql-yoga": "^5.15.1",
    "h3": "^1.15.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "lucia": "^3.2.1",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.12.0",
    "prisma-generator-pothos-codegen": "^0.7.1",
    "prom-client": "^15.1.3",
    "tsdown": "^0.12.9",
    "validator": "^13.15.15",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "biome check --apply",
      "biome format"
    ],
    "*.{json,md}": [
      "biome format"
    ]
  },
  "oclif": {
    "bin": "pothos-cli",
    "dirname": "pothos-cli",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": ":",
    "topics": {
      "build": {
        "description": "Build project commands"
      },
      "check": {
        "description": "Validation and check commands"
      },
      "config": {
        "description": "Configuration management commands"
      },
      "db": {
        "description": "Database management commands"
      },
      "dev": {
        "description": "Development commands"
      },
      "services": {
        "description": "Docker services management"
      }
    }
  }
}

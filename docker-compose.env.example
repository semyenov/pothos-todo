# Production Environment Variables for Docker Compose
# Copy this file to .env in the same directory as docker-compose.prod.yml

# ================================
# Database Configuration
# ================================
POSTGRES_DB=pothos_todo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-change-this

# ================================
# Application Configuration  
# ================================
NODE_ENV=production
API_PORT=4000
HTTP_PORT=80
HTTPS_PORT=443

# Session secret - MUST be changed in production
# Generate with: openssl rand -base64 64
SESSION_SECRET=change-this-in-production-to-a-64-char-secret

# ================================
# OAuth Configuration
# ================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth  
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# Monitoring Configuration
# ================================
GRAFANA_PASSWORD=admin

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=your-redis-password

# ================================
# SSL Configuration (Optional)
# ================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem